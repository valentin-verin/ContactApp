@{
    List<Service> services = Service.GetServices();
    List<Site> sites = Site.GetSites();
}

<form asp-controller="Employee" asp-action="SubmitForm" method="post">
    <div class="form-group">
        <label for="Prenom">Prenom</label>
        <input type="text" class="form-control" id="Prenom" name="FirstName" placeholder="Prenom" required maxlength="30">
    </div>
    <div class="form-group">
        <label for="Nom">Nom</label>
        <input type="text" class="form-control" id="Nom" name="Lastname" placeholder="Nom" required maxlength="30">
    </div>
    <div class="form-group">
        <label for="Telephone">Telephone</label>
        <input type="number" class="form-control" id="Telephone" name="PhoneNumber" placeholder="0600000000" required maxlength="10" max="0699999999">
    </div>
    <div class="form-group">
        <label for="Site">Site :</label>
        <select class="form-control" id="Site" name="IdSite" required>
            @foreach (Site site in sites)
            {
                <option value="@site.Id">@site.City</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Site">Service :</label>
        <select class="form-control" id="Service" name="IdService" required>
            @foreach (Service service in services)
            {
                <option value="@service.Id">@service.ServiceName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Mail">Email address</label>
        <input type="email" class="form-control" id="Mail" placeholder="name@example.com" name="Mail" required maxlength="50">
    </div>
    <div class="form-group">
        <label for="CellphoneNumber">Téléphone Fixe</label>
        <input type="number" class="form-control" id="CellphoneNumber" placeholder="0300000000" name="CellphoneNumber" required maxlength="10" max="0399999999">
    </div>
    <button type="submit" class="btn col p-1 mb-3 btn-secondary">Valider</button>
    <button type="button" class="btn col p-1 btn-secondary" asp-area="" asp-controller="Employee" asp-action="">Retour</button>
</form>
