@{
    @model Site
}


<h1>Site de @Model.City</h1>

@if (ViewBag.Message != null)
{
    <div>
        <span class="text-danger">@ViewBag.Message</span>
    </div>

    <button type="button" class="btn col m-3 btn-secondary">
        <a class="nav-link text-dark" asp-area="" asp-controller="Site" asp-action="">Retour</a>
    </button>
}
else
{
    @if (Model == null)
    {
        <div>
            Une erreur s'est produite, veuillez reessayer
        </div>
        <button type="button" class="btn col m-3 btn-secondary">
            <a class="nav-link text-dark" asp-area="" asp-controller="Site" asp-action="">Retour</a>
        </button>
    }
    else
    {

        <div>Modifier le site </div>

        <form asp-controller="Site" asp-action="SubmitUpdateForm" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <input type="text" name="city" placeholder="Nouvelle ville du site" class="col p-1 mb-3 mt-3" form-control" value="@Model.City" required/>
                <button type="submit" class="btn col p-1 btn-secondary">Modifier</button>
            </div>
        </form>

        <button type="button" class="btn col p-1 btn-secondary">
            <a class="nav-link text-dark" asp-area="" asp-controller="Site" asp-action="">Retour</a>
        </button>

        

    }
}
