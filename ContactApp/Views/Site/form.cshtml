@{
}

@if (ViewBag.Message != null)
{
    <div>
        <span class="text-danger">@ViewBag.Message</span>
    </div>
}

<h1>Ajout d'un site</h1>

<form asp-controller="Site" asp-action="SubmitForm" method="post">
    <div class="form-group">
        <input type="text" name="city" placeholder="Ville du site" class="col p-1 mb-3 mt-3" form-control" required maxlength="30" />
        <button type="submit" class="btn col p-1 btn-secondary">Valider</button>
    </div>
</form>

<button type="button" class="btn col p-1 btn-secondary">
    <a class="nav-link text-dark" asp-area="" asp-controller="Site" asp-action="">Retour</a>
</button>