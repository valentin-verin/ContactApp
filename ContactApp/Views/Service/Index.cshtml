@{
}

@model List<Service>

<h1 class="pt-3 pb-3"> <i class="fas fa-layer-group"></i> Liste des services</h1>

@if (ViewBag.Message != null)
{
    <div class="text-danger mb-2 mt-2">
        <span>@ViewBag.Message</span>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Service</th>
            <th scope="col"></th>
            <th></th>
            <th scope="col" style="text-align: right;"><a asp-controller="Service" asp-action="FormService"> <i class="fas fa-plus"></i> </a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Service service in Model)
        {
        <tr>
            <td>
                @service.ServiceName
            </td>
            <td style="text-align: right;">
                <a asp-controller="Service" asp-action="DisplayService" asp-route-id="@service.Id"><i class="fas fa-eye"></i></a>
            </td>
            <td style="text-align: right;">
                <a asp-controller="Service" asp-action="DisplayServiceUPD" asp-route-id="@service.Id"><i class="fas fa-pen"></i></a>
            </td>
            <td style="text-align: right;">
                <a asp-controller="Service" asp-action="DeleteService" asp-route-id="@service.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>