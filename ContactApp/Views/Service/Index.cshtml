@{
}

@model List<Service>
<h1>Liste des services</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Service <a asp-controller="Service" asp-action="FormService"> <i class="fas fa-plus"></i> </a> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Service service in Model)
        {
            <tr>
                <td>
                    @service.ServiceName
                </td>
                <td>
                    <a asp-controller="Service" asp-action="DisplayService" asp-route-id="@service.Id">Modifier</a>
                </td>
                <td>
                    <a asp-controller="Service" asp-action="DeleteService" asp-route-id="@service.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>