@{
    @model Service
    List<Employee> employees = Employee.GetEmployeesByService(Model.Id);
}

<h1>Service @Model.ServiceName</h1>
@if (Model == null)
{
    <div>
        Une erreur s'est produite, veuillez reessayer
    </div>
    <button type="button" class="btn col p-1 btn-secondary">
        <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="">Retour</a>
    </button>
}
else
{

    if (employees.Count > 0)
    {
        <h3 class="pt-5 pb-3"> Employés du service @Model.ServiceName : </h3>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col">Site</th>
                    <th scope="col">Service</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Teléphone Fixe</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Employee employee in employees)
                {
                    <tr>
                        <td>
                            @employee.FirstName
                        </td>
                        <td>
                            @employee.Lastname
                        </td>
                        <td>
                            @employee.PhoneNumber
                        </td>
                        <td>
                            @employee.Site
                        </td>
                        <td>
                            @employee.Service
                        </td>
                        <td>
                            @employee.Mail
                        </td>
                        <td>
                            @employee.CellphoneNumber
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <button type="button" class="btn col p-1 btn-secondary">
        <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="">Retour</a>
    </button>

}